<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

>


            <ImageView
                android:id="@+id/imageCarousel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:scaleType="centerCrop"
                android:src="@drawable/store" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.9"
                android:background="@drawable/transparent_gradiant" />

            <TextView
                android:id="@+id/titleCarouesl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/txtSubTitle"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="title"
                android:textColor="#fff"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/txtSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:fontFamily="@font/sst_arabic_medium"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="@string/feature_requests_new_description"
                android:textColor="@color/white" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>