<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        android:elevation="0dp"

        app:elevation="10dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            android:layoutDirection="rtl"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"

            app:title=" "
            app:titleTextColor="@color/black">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:elevation="10dp">



                <!--                <TextView-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    android:layout_gravity="center"-->
                <!--                    android:gravity="center"-->
                <!--android:textSize="25sp"-->
                <!--                    android:fontFamily="@font/sst_arabic_bold"-->
                <!--                    android:textColor="@color/black"-->
                <!--                    android:layout_centerVertical="true"-->
                <!--                    android:layout_centerInParent="true"-->
                <!--                    android:layout_centerHorizontal="true"-->
                <!--                    android:text="برنسيسة"-->
                <!-- />-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/ic_offer" />

                <ImageView
                    android:id="@+id/img_menu"
                    android:layout_width="30dp"
                    android:layout_height="30sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/background_button_grey"
                    android:padding="3dp"
                    android:src="@drawable/ic_menu_options" />
                <com.andremion.counterfab.CounterFab
                    android:id="@+id/counter_fab"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_notifications_bell_button"
                    app:backgroundTint="@color/white"
                    app:badgeBackgroundColor="@color/orange"
                    app:elevation="0dp"
                    app:fabSize="auto"

                    />

            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <include layout="@layout/content" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>